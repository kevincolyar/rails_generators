<html>
  <head>
    <meta http-equiv="Content-type" content="text/html; charset=utf-8"/>
    <title>Page Title</title>
    <%%= stylesheet_link_tag '<%= file_name %>' %>
    <%%= javascript_include_tag :defaults %>
    <body> 
      <div id="container">
        <%% flash.each do |name, msg| %>
          <%%= content_tag :div, msg, :id => "flash_#{name}" %>
        <%% end %>
        <%%= yield %>
      </div>
    </body>
  </head>
</html>
